<!doctype html>
<html lang="en">
    <head>
        <title>Mortgages</title>
        <meta charset="utf-8"/>
    </head>
    <body >
        <a href="/">Home</a>
        <h1>Mortgages</h1>
        <table>
            <thead>
                <tr>
                    <th>Principle </th>
                    <th>Interest Rate</th>
                    <th>Long Term</th>
                    <th>Monthly Payments</th>
                    <th>Total Interest</th>
                    <th>Total Amount</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    <td>{{principle}}</td>
                    <td>{{interestrate}}</td>
                    <td>{{loanterm}}</td>
                    <td>{{monthlypayment}}</td>
                    <td>{{totalInterestRateAtEnd}}</td>
                    <td>{{totalAmountAtEnd}}</td>
                    
                </tr>
                {{/each}}
            </tbody>
    </table>
    
    {{#if averagePrinciple}}
        <p>Average principle:{{averagePrinciple}}</p>
    {{/if}}

    {{#if averageInterestRate}}
        <p>Average interest rate:{{averageInterestRate}}</p>
    {{/if}}

    {{#if averageLoanTerm}}
        <p>Average long term:{{averageLoanTerm}}</p>
    {{/if}}

    {{#if averageMonthlyPayment}}
        <p>Average monthly payment:{{averageMonthlyPayment}}</p>
    {{/if}}

    {{#if averageInterestRateAtEnd}}
        <p>Average total interest payment:{{averageInterestRateAtEnd}}</p>
    {{/if}}

    {{#if averageAmountAtEnd}}
        <p>Average total amount:{{averageAmountAtEnd}}</p>
    {{/if}}

    



    </body>

</html>